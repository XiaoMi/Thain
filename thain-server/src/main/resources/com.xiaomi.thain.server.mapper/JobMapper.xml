<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaomi.thain.server.mapper.JobMapper">
    <update id="updateJobProperties">
        update thain_job
        set properties = #{properties}
        where id = #{id}
    </update>

    <select id="getJobByFlowIdAndName" resultType="com.xiaomi.thain.server.model.dr.JobDr">
        select id,
               flow_id,
               name,
               `condition`,
               component,
               callback_url,
               properties,
               x_axis,
               y_axis,
               create_time,
               deleted
        from thain_job
        where flow_id = #{flowId}
          and name = #{name}
          and deleted = 0
    </select>
</mapper>
